  build:
    name: âœ… Python Build & Test
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v3

      - name: âš–ï¸ Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: ğŸ’ª Install Dependencies
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi

      - name: ğŸŒ Run Tests
        run: |
          if [ -f tests/test_app.py ]; then python -m unittest discover -s tests; fi

  scan:
    name: ğŸ” Trivy Security Scan
    runs-on: ubuntu-latest
    needs: build

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v3

      - name: ğŸ› ï¸ Install Trivy
        run: |
          sudo apt-get update
          sudo apt-get install wget apt-transport-https gnupg lsb-release -y
          wget -qO - https://aquasecurity.github.io/trivy-repo/deb/public.key | sudo apt-key add -
          echo "deb https://aquasecurity.github.io/trivy-repo/deb $(lsb_release -sc) main" | sudo tee -a /etc/apt/sources.list.d/trivy.list
          sudo apt-get update
          sudo apt-get install trivy -y

      - name: ğŸ” Trivy - Filesystem Scan (Secrets + Vuln)
        run: trivy fs . --scanners vuln,secret --exit-code 1 --severity HIGH,CRITICAL

      - name: ğŸ” Trivy - Config Scan (IaC)
        run: trivy config . --exit-code 1 --severity HIGH,CRITICAL

  deploy:
    name: ğŸŒŒ Deploy
    runs-on: ubuntu-latest
    needs: scan

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v3

      - name: ğŸš€ Deploy Application
        run: |
          echo "Deploying application..."
          chmod +x ./deploy.sh
          ./deploy.sh


